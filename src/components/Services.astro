---
const services = [
  {
    title: "Terapia Individual",
    price: "R$ 150",
    features: [
      "Sessões de 50 minutos",
      "Atendimento personalizado",
      "Horários flexíveis",
      "Primeira sessão gratuita"
    ]
  },
  {
    title: "Pacote Mensal",
    price: "R$ 500",
    features: [
      "4 sessões por mês",
      "Economia de R$ 100",
      "Horário fixo garantido",
      "Suporte por WhatsApp"
    ]
  }
];
---

<section id="servicos" class="py-20 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12" data-aos="fade-up">Planos e Valores</h2>
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {services.map((service, index) => (
        <div 
          class="bg-white p-8 rounded-lg shadow-lg hover:shadow-xl transition-all hover:-translate-y-2" 
          data-aos="fade-up"
          data-aos-delay={index * 200}
        >
          <h3 class="text-2xl font-bold mb-4 text-primary">{service.title}</h3>
          <p class="text-3xl font-bold mb-6">{service.price}</p>
          <ul class="space-y-3 mb-8">
            {service.features.map(feature => (
              <li class="flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="#agendar" class="block text-center bg-primary text-white px-6 py-3 rounded-full hover:bg-secondary transition-all hover:scale-105">
            Agendar Agora
          </a>
        </div>
      ))}
    </div>
  </div>
</section>